<%= form_with(model: applicant) do |form| %>
  <% if applicant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>

      <ul>
        <% applicant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :overview, style: "display: block" %>
    <%= form.text_area :overview %>
  </div>

  <div>
    <%= form.label :funding, style: "display: block" %>
    <%= form.number_field :funding %>
  </div>

  <div>
    <%= form.label :project_id, style: "display: block" %>
    <%= form.collection_select :project_id, Project.order(:name), :id, :title %>
  </div>

  <%= form.fields_for :status_transitions do |status_form| %>
    <% if current_status?(form, status_form) %>
      <div data-controller="applicant-status">
        <div>
          <%= status_form.label :name, "Status", style: "display: block" %>
          <%=
            status_form.select :name,
              options_for_select(
                StatusTransition.names.map {|key, value| [key.titleize, StatusTransition.names.key(value)]}, applicant.status.name
              ),
            {},
            data: {
              action: 'change->applicant-status#changeCommentInputText',
              applicant_status_target: 'status'
            }
          %>
        </div>

        <div>
          <%= status_form.label :comment %>
          <%= status_form.text_area :comment, data: { applicant_status_target: "comment" } %>
        </div>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<h1>Payments</h1>
<table id="payments">
  <thead>
    <tr>
      <th>Date</th>
      <th>Project</th>
      <th>Payments due</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.payment_date %></td>
        <td><%= project.title %></td>
        <td>
          <%=
            applicants = project.applicants.select do |applicant|
              if applicant.project.title == project.title &&
                 applicant.status == 'approved'
                true
              else
                false
              end
            end

            applicants.map(&:name).join(', ')
           %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
